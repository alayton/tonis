{
    "name": "tonis/tonis",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Tonis is a middleware framework built on top of Stratigility.",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.5",
        "zendframework/zend-stratigility": "^1.0",
        "tonis/di": "~1.0-dev",
        "tonis/router": "~1.0-dev",
        "tonis/view": "~1.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "scrutinizer/ocular": "^1.1.1",
        "squizlabs/php_codesniffer": "^1.0",
        "zendframework/zend-diactoros": "^1.0"
    },
    "suggest": {
        "zendframework/zend-diactoros": "Or another PSR-7 implementation"
    },
    "autoload": {
        "psr-4": {
            "Tonis\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tonis\\": [
                "test/"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
